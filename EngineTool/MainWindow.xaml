<Window x:Class="EngineTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngineTool"
        mc:Ignorable="d"
        Title="Terrain Generator Data" Height="450" Width="800">

    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File" ToolTip="Hallo Welt!">
                    <MenuItem Header="_New" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save..." Command="{Binding SaveDataCommand}"/>
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True"/>
        </DockPanel>

        <Grid Grid.Column="0" Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="25" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"><Run Language="de-de" Text="Terrain Generation"/></TextBlock>

            <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Stretch">
                <DockPanel Margin="15,0,15,5">
                    <TextBlock Text="Map Size" HorizontalAlignment="Left" TextWrapping="Wrap"><Run Language="de-de"/></TextBlock>
                    <TextBox Text="{Binding MaxTerrainHeight}" Width="150" HorizontalAlignment="Right" HorizontalContentAlignment="Right" RenderTransformOrigin="-0.597,0.247" TextWrapping="Wrap"/>
                </DockPanel>

                <DockPanel Margin="15,0,15,5">
                    <TextBlock Text="Maximum Terrain Height" HorizontalAlignment="Left" TextWrapping="Wrap"><Run Language="de-de"/></TextBlock>
                    <TextBox Text="{Binding MapSize}" Width="150" HorizontalAlignment="Right" HorizontalContentAlignment="Right" RenderTransformOrigin="-0.011,0.437" TextWrapping="Wrap"/>
                </DockPanel>
            </StackPanel>

            <TextBlock Grid.Row="2" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"><Run Language="de-de" Text="Relative Transition Heights"/></TextBlock>

            <StackPanel Grid.Row="3" Orientation="Vertical" VerticalAlignment="Stretch">
                <DockPanel Margin="15,0,15,5">
                    <TextBlock Text="Base Height" HorizontalAlignment="Left" TextWrapping="Wrap"><Run Language="de-de" /></TextBlock>
                    <TextBox Text="{Binding BaseHeight}" HorizontalAlignment="Right" TextWrapping="Wrap" Width="150" HorizontalContentAlignment="Right" RenderTransformOrigin="-0.011,0.437"/>
                </DockPanel>

                <DockPanel Margin="15,0,15,5">
                    <TextBlock Text="Terrain Layer Height 01" HorizontalAlignment="Left" TextWrapping="Wrap"><Run Language="de-de"/></TextBlock>
                    <TextBox Text="{Binding TerrainLayerHeight01}" HorizontalAlignment="Right" TextWrapping="Wrap" Width="150" HorizontalContentAlignment="Right" RenderTransformOrigin="-0.011,0.437"/>
                </DockPanel>

                <DockPanel Margin="15,0,15,5">
                    <TextBlock Text="Terrain Layer Height 02" HorizontalAlignment="Left" TextWrapping="Wrap"><Run Language="de-de"/></TextBlock>
                    <TextBox Text="{Binding TerrainLayerHeight02}" HorizontalAlignment="Right" TextWrapping="Wrap" Width="150" HorizontalContentAlignment="Right" RenderTransformOrigin="-0.011,0.437"/>
                </DockPanel>

                <DockPanel Margin="15,0,15,5">
                    <TextBlock Text="Terrain Layer Height 03" HorizontalAlignment="Left" TextWrapping="Wrap"><Run Language="de-de"/></TextBlock>
                    <TextBox Text="{Binding TerrainLayerHeight03}" HorizontalAlignment="Right" TextWrapping="Wrap" Width="150" HorizontalContentAlignment="Right" RenderTransformOrigin="-0.011,0.437"/>
                </DockPanel>

                <DockPanel Margin="15,0,15,5">
                    <TextBlock Text="Transition Sharpness" HorizontalAlignment="Left" TextWrapping="Wrap"><Run Language="de-de"/></TextBlock>
                    <TextBox Text="{Binding ElementName=TransitionSharpness, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Right" Width="50" />
                    <Slider HorizontalAlignment="Right" Width="100" Maximum="100" TickFrequency="0.5" IsSnapToTickEnabled="True" Name="TransitionSharpness" Value="{Binding TransitionSharpness}" />
                </DockPanel>

            </StackPanel>

        </Grid>




        <Button Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" RenderTransformOrigin="-0.211,0.396" Height="20" Width="100" VerticalAlignment="Center" Click="Button_Click" Content="Clear" Command="{Binding ClearCommand}"/>
    </Grid>
</Window>
